{
	"config": {
		"target": "http://lb-561103806.us-east-1.elb.amazonaws.com:4000",
		"http": {
			"timeout": 3
		},
		"phases": [
			{
				"duration": 180,
				"arrivalCount": 1
			}
		],
		"payload": [
			{
				"path": "productRecords.csv",
				"fields": [
					"asin",
					"productName",
					"productDescription",
					"group"
				],
				"order": "sequence"
			},
			{
				"path": "UserData.csv",
				"fields": [
					"fname",
					"lname",
					"address",
					"city",
					"state",
					"zip",
					"email",
					"username",
					"password"
				],
				"order": "sequence"
			}
		]
	},
	"scenarios": [
		{
			"name": "Project 4",
			"flow": [
				{
					"post": {
						"url": "/registerUser",
						"json": {
							"fname": "{{{fname}}}",
							"lname": "{{lname}}",
							"address": "{{{address}}}",
							"city": "{{{city}}}",
							"state": "{{{state}}}",
							"zip": "{{{zip}}}",
							"email": "{{{email}}}",
							"username": "{{{ username }}}",
							"password": "{{ password }}"
						},
						"match": {
							"json": "$.message",
							"value": "{{{fname}}} was registered successfully"
						}
					}
				},
				{
					"post": {
						"url": "/login",
						"json": {
							"username": "{{{username}}}",
							"password": "{{{password}}}"
						},
						"match": {
							"json": "$.message",
							"value": "Welcome {{{fname}}}"
						}
					}
				},
				{
					"post": {
						"url": "/buyProducts",
						"json": {
							"products": [
								{
									"asin": "{{{asin}}}"
								}
							]
						},
						"match": {
							"json": "$.message",
							"value": "The action was successful"
						}
					}
				},
				{
					"post": {
						"url": "/buyProducts",
						"json": {
							"products": [
								{
									"asin": "{{{asin}}}"
								}
							]
						},
						"match": {
							"json": "$.message",
							"value": "The action was successful"
						}
					}
				},
				{
					"post": {
						"url": "/buyProducts",
						"json": {
							"products": [
								{
									"asin": "{{{asin}}}"
								}
							]
						},
						"match": {
							"json": "$.message",
							"value": "The action was successful"
						}
					}
				},
				{
					"post": {
						"url": "/viewProducts",
						"json": {
							"asin": "{{{asin}}}"
						},
						"match": {
							"json": "$.product[0].productName",
							"value": "{{{productName}}}"
						}
					}
				},
				{
					"post": {
						"url": "/logout",
						"match": {
							"json": "$.message",
							"value": "You have been successfully logged out"
						}
					}
				},
				{
					"post": {
						"url": "/login",
						"json": {
							"username": "jadmin",
							"password": "admin"
						},
						"match": {
							"json": "$.message",
							"value": "Welcome Jenny"
						}
					}
				},
				{
					"post": {
						"url": "/productsPurchased",
						"json": {
							"username": "{{{username}}}"
						},
						"match": {
							"json": "$.products[0].productName",
							"value": "{{{productName}}}"
						}
					}
				},
				{
					"post": {
						"url": "/viewProducts",
						"json": {
							"keyword": "{{{productName}}}"
						},
						"match": {
							"json": "$.product[0].productName",
							"value": "{{{productName}}}"
						}
					}
				},
				{
					"post": {
						"url": "/logout",
						"match": {
							"json": "$.message",
							"value": "You have been successfully logged out"
						}
					}
				}
			]
		}
	]
}